{% extends '@content/page.twig' %}

{% import '@util/formmacro.twig' as f %}

{% block headerbody %}
    <h1 class="text-center">Password Reset</h1>
{% endblock headerbody %}

{% block navigation %}
{% endblock navigation %}

{% block main %}
    <section class="row">
        <article class="mx-auto col mt-5">
            {% include '@util/message.twig' %}
            {% if not done %}
                {{f.startform({action: base ~ '/forgot/', method: 'post', class: 'jumbotron'})}}
                    {{f.startfset('Send Password Reset Message')}}
                        {{f.text({id: 'el', label: 'Email', name: 'eorl', ph: 'Your email address', required: TRUE})}}
                        {{f.submit({value: 'Reset'})}}
                    {{f.endfset()}}
                {{f.endform()}}
            {% endif %}
        </article>
    </section>
{% endblock main %}

{% block pagefooter %}
{% endblock pagefooter %}
